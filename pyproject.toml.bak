[build-system]
requires = ["setuptools>=45", "wheel", "setuptools_scm[toml]>=6.2"]
build-backend = "setuptools.build_meta"

[project]
name = "agential-researcher"
version = "0.1.0"
description = "An agential system for research paper monitoring and analysis"
readme = "README.md"
authors = [{name = "Agential Researcher Team"}]
license = {text = "MIT"}
requires-python = ">=3.9"
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "Topic :: Scientific/Engineering :: Artificial Intelligence",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
]

dependencies = [
    # Web Framework
    "fastapi>=0.104.1",
    "uvicorn[standard]>=0.24.0",
    
    # Async HTTP
    "httpx>=0.25.0",
    "requests>=2.31.0",
    
    # Queue System
    "celery>=5.3.0",
    "redis>=5.0.0",
    
    # Database
    "sqlite3",
    "lancedb>=0.5.0",
    "sentence-transformers>=2.2.2",
    
    # Data Export
    "pandas>=2.0.0",
    "openpyxl>=3.1.0",
    
    # Monitoring
    "prometheus-client>=0.17.0",
    
    # Configuration
    "pydantic>=2.4.0",
    "pydantic-settings>=2.0.0",
    
    # Data Processing
    "feedparser>=6.0.0",
    "huggingface-hub>=0.19.0",
    
    # Async Processing
    "asyncio-mqtt>=0.18.0",
    
    # Rate Limiting
    "slowapi>=0.1.9",
    
    # Security
    "python-multipart>=0.0.6",
    "passlib[bcrypt]>=1.7.4",
    "python-jose[cryptography]>=3.3.0",
    
    # Testing
    "pytest>=7.4.0",
    "pytest-asyncio>=0.21.0",
    "pytest-cov>=4.1.0",
    
    # Code Quality
    "black>=23.7.0",
    "ruff>=0.0.285",
    "mypy>=1.5.0",
    
    # Utilities
    "python-dotenv>=1.0.0",
]

[project.optional-dependencies]
dev = [
    "pre-commit>=3.0.0",
    "jupyter>=1.0.0",
    "notebook>=7.0.0",
]
docker = [
    "docker>=7.0.0",
]

[project.urls]
Homepage = "https://github.com/your-org/agential-researcher"
Repository = "https://github.com/your-org/agential-researcher"

[tool.setuptools.packages.find]
where = ["src"]

[tool.pytest.ini_options]
testpaths = ["tests"]
asyncio_mode = "auto"
addopts = "-v"

[tool.ruff]
line-length = 120
target-version = "py39"

[tool.black]
line-length = 120
target-version = ['py39']

[tool.mypy]
python_version = "3.9"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true